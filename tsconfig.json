{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "noImplicitAny": false,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [ "vite/client","node" ]
  },
  "include": ["packages/**/*.ts"]
}
